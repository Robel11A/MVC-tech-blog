{{#if logged_in}}
  <nav>
    <a href="/">Home</a>
    <a href="/dashboard">Dashboard</a>
    <button id="logout">Logout</button>
  </nav>
{{else}}
  <nav>
    <a href="/">Home</a>
    <a href="/login">Login</a>
  </nav>
{{/if}}

<h1>Homepage</h1>

{{#each posts}}
  <div>
    <h2><a href="/post/{{id}}">{{title}}</a></h2>
    <p>By {{user.username}} on {{created_at}}</p>
  </div>
{{/each}}
